<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:textViewStyle">@style/AppTextStyle</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppButtonStyle">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTextStyle" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:background">@color/windowBackground</item>
    </style>


</resources>
