<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppCardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lastestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineBackground"
            android:padding="12dp"
            android:text="最近"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lineBackground"
            android:padding="12dp"
            android:text="2015-08-12 20:12"/>

        <TextView
            android:id="@+id/lineTitle"
            style="@style/line_h"
            android:layout_below="@+id/lastestTitle"/>

        <TextView
            android:id="@+id/userDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineTitle"
            android:padding="16dp"
            android:text="找一个艺术类老师"/>

        <include
            layout="@layout/layout_tablecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userDesc"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/userContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTableContent"
            android:padding="16dp"
            android:text="希望老师是一个有耐心、有内涵、有计划、有想法的老师"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userContent"
            style="@style/SelectButtonWhiteStyle"
            android:text="更多"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>