<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:text="20:00-21:00"
        android:textSize="12sp"/>

    <TextView
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生xxx"
        android:textSize="16sp"/>

    <TextView
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="奥数培训"
        android:textSize="16sp"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/windowBackgroundDark"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fileImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_attach"/>

            <TextView
                android:id="@+id/fileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fileImage"
                android:paddingBottom="0dp"
                android:paddingTop="5dp"
                android:text="参考书籍"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fileTitle"
                android:layout_toRightOf="@+id/fileImage"
                android:paddingTop="5dp"
                android:text="小学语言（二年级）上册"
                android:textSize="14sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
