<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/select_button_white"
        android:gravity="center_vertical|left">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/courseImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/lineTitle"
            android:layout_gravity="center|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/icon_user_none_photo"
            app:siBorderWidth="0dp"
            />

        <TextView
            android:id="@+id/courseFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/courseImage"
            android:text="参考书籍"/>

        <TextView
            android:id="@+id/courseFileDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseFileName"
            android:layout_toRightOf="@+id/courseImage"
            android:text="小学语言（二年级）上册"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lineBackground"
        style="@style/line_h"/>
</LinearLayout>