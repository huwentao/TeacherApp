<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/AppCardViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <android.widget.Space
            android:layout_width="24dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/parentAsk"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/sel_button_yellow_radius"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/findDetailTitle"
            android:textColor="@color/textColorWhite"
            android:textSize="16sp"/>

        <android.widget.Space
            android:layout_width="24dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/nearTeacher"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/sel_button_green_radius"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/findMapNearTeacher"
            android:textColor="@color/textColorWhite"
            android:textSize="16sp"/>

        <android.widget.Space
            android:layout_width="24dp"
            android:layout_height="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>