<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lineContent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/textColorHint"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/courseTime"
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:text="20:00-21:00"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/studentName"
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生xxx"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/courseTitle"
        style="@style/AppTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="奥数培训"
        android:textSize="16sp"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/windowBackgroundLight"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/fileImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@drawable/icon_attach"/>

            <TextView
                android:id="@+id/fileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fileImage"
                android:paddingBottom="0dp"
                android:text="参考书籍"/>

            <TextView
                android:id="@+id/fileDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fileTitle"
                android:layout_toRightOf="@+id/fileImage"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text="小学语言（二年级）上册"
                android:textSize="12sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
