<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabView">
        <attr name="TabImageSrc" format="reference"/>
        <attr name="TabImageTargetWidth" format="dimension"/>
        <attr name="TabImageColor" format="color"/>
        <attr name="TabImageColorPress" format="color"/>
    </declare-styleable>

    <declare-styleable name="TabImageView">
        <attr name="TabImageImageSrc" format="reference"/>
        <attr name="TabImageImageTargetWidth" format="dimension"/>
        <attr name="TabImageImageColor" format="color"/>
        <attr name="TabImageImageColorPress" format="color"/>
    </declare-styleable>

    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="colors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>
</resources>