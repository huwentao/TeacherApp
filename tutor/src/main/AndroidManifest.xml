<?xml version="1.0" encoding="utf-8"?>
<manifest package="www.ht.com.app"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ui.TutorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.LoadingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:windowSoftInputMode="adjustUnspecified">
        </activity>
        <activity
            android:name=".ui.BaseActivity"
            android:label="@string/title_activity_base">
        </activity>
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".ui.activity.SettingActivity"
            android:label="@string/title_activity_setting">
        </activity>
        <activity
            android:name=".ui.activity.MessageActivity"
            android:label="@string/title_activity_message">
        </activity>
        <activity
            android:name=".ui.activity.AboutActivity"
            android:label="@string/title_activity_about">
        </activity>
        <activity
            android:name=".ui.activity.AdviceActivity"
            android:label="@string/title_activity_advice">
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.activity.TeacherActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
