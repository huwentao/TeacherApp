<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.ht.com.app" >

    <application
        android:name="www.ht.com.app.base.HTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="www.ht.com.app.ui.activity.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.ht.com.app.base.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="www.ht.com.app.ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="www.ht.com.app.ui.activity.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="www.ht.com.app.ui.activity.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="www.ht.com.app.ui.activity.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="www.ht.com.app.ui.activity.AdviceActivity"
            android:label="@string/title_activity_advice" >
        </activity>
    </application>

</manifest>
